<form col="6">
    <label name="name"/>
    <field name="name"/>
    <label name="slug"/>
    <field name="slug"/>
    <label name="active"/>
    <field name="active"/>
    <label name="canonical_uri"/>
    <field name="canonical_uri"/>
    <label name="template"/>
    <field name="template"/>
    <notebook colspan="6">
        <page string="Descriptions" id="descriptions">
            <group id="description_html" colspan="4">
              <field name="description" colspan="4" widget="html"/>
              <field name="description_html" widget="richtext" toolbar="0" yexpand="1" yfill="1" colspan="4"/>
            </group>
            <group id="description" colspan="4">
              <field name="description" colspan="4"/>
            </group>
            <newline/>
            <label name="markup"/>
            <field name="markup" xexpand="1"/>
        </page>
        <page string="SEO" id="seo">
            <label name="metadescription"/>
            <field name="metadescription"/><newline/>
            <label name="metakeywords"/>
            <field name="metakeywords"/><newline/>
            <label name="metatitle"/>
            <field name="metatitle"/><newline/>
        </page>
        <page string="Extra" id="extra">
            <label name="visibility"/>
            <field name="visibility"/>
            <label name="show_title"/>
            <field name="show_title"/>
            <separator name="websites" colspan="4"/>
            <field name="websites" colspan="4"/>
            <separator name="uris" colspan="4"/>
            <field name="uris" colspan="4"/>
        </page>
        <page name="blocks">
            <field name="blocks"/>
        </page>
        <page name="attachments">
            <field name="attachments"/>
        </page>
    </notebook>
</form>
